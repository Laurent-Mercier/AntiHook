{
  "manifest_version": 2,
  "name": "Phishing Email Detector",
  "version": "1.0",
  "description": "Detects if an email is a phishing attempt using a screenshot.",
  "permissions": [
  "http://localhost:8000/*",
  "http://127.0.0.1:8000/*",
  "activeTab",
  "tabs",
  "notifications",
  "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}